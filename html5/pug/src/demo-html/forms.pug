//- Demo Form Content
//- -----------------------------------------------------------------

extends ../partials/_base

block title
	title HTML Form Elements

block append styles
	style
		include info.css


//- -----------------------------------
//- Page Main-Content Starts Here
//- -----------------------------------
block content
	article
		header
			h1 Demo Form Elements

			p.o-intro
				| This page is good place to quickly reference the main style elements used within the project. This is what an intro paragraph looks like using the <code>#{'.o-intro'}</code> class.

		hr

		section
			h2 Forms

			section
				header: h3 Meters & Progress
				include html-tags/_forms-meter_progress

			hr

			section
				header: h3 Fieldset & Legend
				include html-tags/_forms-fieldset_legend

			hr

			section
				header: h3 Inputs Fields
				include html-tags/_forms-input-fields

			hr

			section
				header: h3 Select
				include html-tags/_forms-input-select

			hr

			section
				header: h3 Checkboxes
				include html-tags/_forms-input-checkbox

			hr

			section
				header: h3 Radio Inputs
				include html-tags/_forms-input-radio

			hr

			section
				header: h3 Textareas
				include html-tags/_forms-input-textareas

			hr

			section
				header: h3 Buttons
				include html-tags/_forms-input-buttons



		//- .c-contact-form#nav-contact
			h4 #{SITE.footer.colThird}
			p.form-desc Required fields are followed by #[abbr(title='required') *]

			form#contact_form
				.l-input-wrap
					label(for='name') Name: #[abbr(title='required') *]
						input#name(type='text', name='name', placeholder='Amelia Earhart')
					label(for='email') Email: #[abbr(title='required') *]
						input#email(type="text", name='email', placeholder="amelia@gmail.com")
				label.message-input(for='textarea') Message: #[abbr(title='required') *]
					textarea#textarea(name="textarea", cols="30", rows="10" placeholder='Write something here.' required)

				button(type="submit") Submit
